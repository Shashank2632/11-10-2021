#include<stdio.h>
int main()
{
    int a[6],i,s=0,avg;
    float b[6],sum=0,average;
    printf("Enter Mr. Int daily wages\n");
    for(i=0;i<6;i++)
    {
        scanf("%d", &a[i]);
    }
    for(i=0;i<6;i++)
    {
        s=s+a[i];
        avg=(s/6);
    }
    printf("Mr.Int weekly salary is %d and his average salary is %d\n", s, avg);
    printf("Mr.Float please enter your wage:\n");
    for(i=0;i<6;i++)
    {
        scanf("%f", &b[i]);
    }
    for(i=0;i<6;i++)
    {
        sum=sum+b[i];
        average=(sum/6);
    }
    printf("Mr.Float weekly salary is %0.2f and his average salary is %0.2f\n", sum, average);
    return 0;
}

